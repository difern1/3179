{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Per Capita Emissions vs Life Expectancy" },
    "data": {"url": "https://github.com/difern1/3179/blob/d3581515492517fb653bfa22373f6306abae566d/emissions.csv"},
    "mark": "point",
    "transform": [
        {
            "filter": "datum['Life expectancy'] > 30 " 
        }
    ],

    "encoding": {
      "x": {
        "field": "Per Capita",
        "scale": {"type": "log", "base":2, "zero":false},
        "type": "quantitative"},
    "opacity": {
        "condition": {
            "test": "test(regexp(search_input,'i'),datum.Country)",
            "value": 1
        },
        "value": 0.07
    },
    "tooltip": [
        {"field":"Country","type":"nominal", "title":"Country"},
        {"field":"Per Capita","type":"nominal", "title":"Per Capita Emissions"},
        {"field":"Life expectancy","type":"quantitative", "title":"Life Expectancy"}],
    "y": {
        "field": "Life expectancy", 
        "scale":{"domain": [50,90]},
        "type": "quantitative"}
    },
    "params":[
    {
    "name": "search_input",
    "bind": {
        "input": "search",
        "placeholder": "Country",
        "name": "Search: "
    },
    "value": ""
    }
    ]
}

    



  